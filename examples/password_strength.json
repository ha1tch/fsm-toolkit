{
  "name": "Password Validator",
  "type": "moore",
  "description": "Tracks password strength as characters are entered",
  "states": ["empty", "weak", "medium", "strong"],
  "alphabet": ["lower", "upper", "digit", "special"],
  "initial": "empty",
  "accepting": ["strong"],
  "state_outputs": {
    "empty": "Enter password",
    "weak": "Too weak",
    "medium": "Getting better",
    "strong": "Strong!"
  },
  "transitions": [
    {"from": "empty", "input": "lower", "to": "weak"},
    {"from": "empty", "input": "upper", "to": "weak"},
    {"from": "empty", "input": "digit", "to": "weak"},
    {"from": "empty", "input": "special", "to": "medium"},
    {"from": "weak", "input": "lower", "to": "weak"},
    {"from": "weak", "input": "upper", "to": "medium"},
    {"from": "weak", "input": "digit", "to": "medium"},
    {"from": "weak", "input": "special", "to": "strong"},
    {"from": "medium", "input": "lower", "to": "medium"},
    {"from": "medium", "input": "upper", "to": "medium"},
    {"from": "medium", "input": "digit", "to": "strong"},
    {"from": "medium", "input": "special", "to": "strong"},
    {"from": "strong", "input": "lower", "to": "strong"},
    {"from": "strong", "input": "upper", "to": "strong"},
    {"from": "strong", "input": "digit", "to": "strong"},
    {"from": "strong", "input": "special", "to": "strong"}
  ]
}
